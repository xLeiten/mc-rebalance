{
  "schemaVersion": 1,
  "id": "rebalance_mod",
  "version": "${version}",
  "name": "Rebalance Mod",
  "description": "Изменяет баланс игры в сторону большей сложности. Лучший эффект достигается в режиме 'Хардкор'",
  "authors": ["xLeiten"],
  "license": "All-Rights-Reserved",
  "environment": "server",
  "entrypoints": {
    "fabric-datagen": [
      "me.xleiten.rebalance.core.datagen.RebalanceDataGenerator"
    ],
    "server": [
      "me.xleiten.rebalance.Rebalance"
    ],
    "mm:early_risers": [
      "me.xleiten.rebalance.core.asm.RebalanceFabricASMEntry"
    ]
  },
  "mixins": [
    "rebalance_mod.mixins.json"
  ],
  "accessWidener": "rebalance_mod.accesswidener",
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "${minecraft_version}"
  }
}
